{
  "markdownlint.config": {
    "default": true,
    "MD001": true,
    "MD003": { "style": "atx" },
    "MD004": { "style": "dash" },
    "MD007": { "indent": 2 },
    "MD009": { "br_spaces": 2 },
    "MD010": true,
    "MD012": { "maximum": 1 },
    "MD013": false,
    "MD022": true,
    "MD024": { "siblings_only": true },
    "MD025": true,
    "MD026": false,
    "MD029": { "style": "ordered" },
    "MD030": true,
    "MD031": true,
    "MD032": true,
    "MD033": false,
    "MD034": true,
    "MD035": true,
    "MD036": false,
    "MD037": true,
    "MD038": true,
    "MD039": true,
    "MD040": true,
    "MD041": true,
    "MD046": { "style": "fenced" },
    "MD047": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "files.associations": {
    "*.md": "markdown"
  }
}

