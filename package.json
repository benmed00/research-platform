{
  "name": "research-platform",
  "version": "1.0.0",
  "description": "Plateforme ERP et scientifique pour centre de recherche environnemental et biodiversit√©",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "ts-node --project tsconfig.seed.json prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:check": "ts-node --project tsconfig.seed.json scripts/check-db.ts",
    "db:fix-client": "powershell -ExecutionPolicy Bypass -File scripts/fix-prisma-client.ps1",
    "postinstall": "prisma generate",
    "headers:add": "ts-node --project tsconfig.seed.json scripts/add-file-headers.ts",
    "headers:update": "ts-node --project tsconfig.seed.json scripts/add-file-headers.ts",
    "git:branch": "ts-node --project tsconfig.seed.json scripts/git-workflow.ts branch",
    "git:commit-grouped": "ts-node --project tsconfig.seed.json scripts/git-workflow.ts commit-grouped",
    "git:push": "ts-node --project tsconfig.seed.json scripts/git-workflow.ts push",
    "git:pr-desc": "ts-node --project tsconfig.seed.json scripts/git-workflow.ts pr-desc",
    "git:verify": "ts-node --project tsconfig.seed.json scripts/verify-git-setup.ts",
    "github:setup": "ts-node --project tsconfig.seed.json scripts/setup-github-repo.ts",
    "github:create": "powershell -ExecutionPolicy Bypass -File scripts/create-github-repo.ps1",
    "add-pr-metadata": "ts-node --project tsconfig.seed.json scripts/add-pr-metadata.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "prisma": {
    "seed": "ts-node --project tsconfig.seed.json prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@prisma/client": "^5.19.0",
    "@sentry/nextjs": "^10.32.1",
    "@types/leaflet.markercluster": "^1.5.6",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "jspdf": "^4.0.0",
    "leaflet": "^1.9.4",
    "leaflet.markercluster": "^1.5.3",
    "lucide-react": "^0.427.0",
    "next": "^16.1.1",
    "next-auth": "^4.24.7",
    "otplib": "^12.0.1",
    "papaparse": "^5.4.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "qrcode": "^1.5.4",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.52.0",
    "react-leaflet": "^4.2.1",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.5.2",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^20.14.0",
    "@types/papaparse": "^5.3.14",
    "@types/pino": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.38",
    "prisma": "^5.19.0",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^4.0.16"
  }
}
